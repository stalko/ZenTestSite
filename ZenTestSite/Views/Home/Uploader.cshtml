@{
    ViewData["Title"] = "Uploader";
}

<div class="container">
      <div class="panel panel-default">
        <div class="panel-heading"><strong>Upload</strong></div>
        <div class="panel-body">
            <!-- Url Form -->
            <h4>Write url</h4>
			<div class="form-horizontal">
			    <input name="search" id="js-upload-files" style="width: 70%;max-width: 100%;">
			    <button type="submit" class="btn btn-sm btn-primary" id="js-upload-submit" style="width: 20%;">button</button>
			</div>
            <hr/>
			
			<!-- TextBox Form -->
            <h4>Write text</h4>
                <textarea style="max-width:100%;width:100%;height:200px;"></textarea>
			    <br/>
                <button type="submit" class="btn btn-sm btn-primary" id="js-upload-submit">Processing</button>
            <hr/>

			<!-- Standar Form -->
			<h4>Select file</h4>
			<form action="" method="post" enctype="multipart/form-data" id="js-upload-form">
				<div class="form-inline">
				  <div class="form-group">
				    <input type="file" name="file" id="js-upload-files">
				  </div>
				  <button type="submit" class="btn btn-sm btn-primary" id="js-upload-submit">Processing file</button>
				</div>
			</form>
        </div>
      </div>
    </div> <!-- /container -->